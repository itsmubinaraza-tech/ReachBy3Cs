# ===========================================
# Needs-Matched Engagement Platform
# Environment Variables
# ===========================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase (for mobile - same as above but with EXPO_ prefix)
EXPO_PUBLIC_SUPABASE_URL=http://localhost:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Python Agent Service
AGENT_SERVICE_URL=http://localhost:8000
AGENT_SERVICE_API_KEY=your-api-key

# LLM Configuration (vLLM)
VLLM_BASE_URL=http://localhost:8080/v1
VLLM_API_KEY=your-vllm-key
LLM_MODEL_NAME=meta-llama/Llama-3.1-70B-Instruct

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Platform API Keys (for crawlers)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=NeedsMatchedPlatform/1.0

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Google Search (SerpAPI or custom)
SERPAPI_KEY=

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=

# Environment
NODE_ENV=development
