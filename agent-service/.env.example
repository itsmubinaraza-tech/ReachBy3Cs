# Application Settings
APP_NAME=agent-service
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Agent Configuration
AGENT_TIMEOUT_SECONDS=120
AGENT_MAX_ITERATIONS=10

# Reddit Configuration (for crawling)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=ReachBy3Cs/1.0

# Reddit Configuration (for posting - requires authenticated user)
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# Twitter/X Configuration
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Auto-posting Configuration
AUTO_POST_ENABLED=false
AUTO_POST_CHECK_INTERVAL=300
AUTO_POST_MAX_DAILY=50
AUTO_POST_MAX_HOURLY=10

# SerpAPI Configuration (for Google search)
SERP_API_KEY=your-serp-api-key
